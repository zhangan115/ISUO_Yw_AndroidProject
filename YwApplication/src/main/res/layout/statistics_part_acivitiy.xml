<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/llOpenChooseTime"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:src="@drawable/last_page" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color2B2B2B"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/ivTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/drop_down" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="21dp"
            android:src="@drawable/next_page" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorEAF4FD"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/llShowContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:background="@drawable/bg"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="7dp"
                        android:text="固定任务"
                        android:textColor="@color/color788FAE"
                        android:textSize="14dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/color_division" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:orientation="horizontal"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/tv_1_1_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="日检  59/60"
                            android:textColor="@color/color2B2B2B"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_1_1_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            tools:text="400台/次"
                            android:textColor="@color/color2B2B2B"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_1_1_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="平均3分钟/台"
                            android:textColor="@color/color2B2B2B"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:orientation="horizontal"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/tv_1_2_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="周检  59/60"
                            android:textColor="@color/color2B2B2B"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_1_2_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            tools:text="400台/次"
                            android:textColor="@color/color2B2B2B"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_1_2_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="平均3分钟/台"
                            android:textColor="@color/color2B2B2B"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:orientation="horizontal"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/tv_1_3_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="月检  59/60"
                            android:textColor="@color/color2B2B2B"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_1_3_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            tools:text="400台/次"
                            android:textColor="@color/color2B2B2B"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_1_3_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="平均3分钟/台"
                            android:textColor="@color/color2B2B2B"
                            android:textSize="15dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:orientation="horizontal"
                        android:paddingBottom="7dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/tv_1_4_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="月检  59/60"
                            android:textColor="@color/color2B2B2B"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_1_4_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            tools:text="400台/次"
                            android:textColor="@color/color2B2B2B"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_1_4_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="平均3分钟/台"
                            android:textColor="@color/color2B2B2B"
                            android:textSize="15dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:background="@drawable/bg"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="7dp"
                        android:text="故障处理"
                        android:textColor="@color/color788FAE"
                        android:textSize="14dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/color_division" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:orientation="horizontal"
                        android:paddingTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="故障"
                            android:textColor="@color/color2B2B2B"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_2_1_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingRight="20dp"
                            android:textColor="@color/color2B2B2B"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_2_1_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color2B2B2B"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:orientation="horizontal"
                        android:paddingBottom="7dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="检修"
                            android:textColor="@color/color2B2B2B"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_2_2_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingRight="20dp"
                            tools:text="已处理19"
                            android:textColor="@color/color2B2B2B"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_2_2_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="共20"
                            android:textColor="@color/color2B2B2B"
                            android:textSize="15dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:background="@drawable/bg"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="7dp"
                        android:text="专项工作"
                        android:textColor="@color/color788FAE"
                        android:textSize="14dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/color_division" />

                    <LinearLayout
                        android:id="@+id/llIncrementItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:background="@drawable/bg"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="7dp"
                        android:text="今日之最"
                        android:textColor="@color/color788FAE"
                        android:textSize="14dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/color_division" />

                    <TextView
                        android:id="@+id/tv_4_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/color2B2B2B"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/color_division" />

                    <TextView
                        android:id="@+id/tv_4_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/color2B2B2B"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/color_division" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:text="巡检耗时最短"
                            android:textColor="@color/color2B2B2B"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_4_3_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            tools:text="1小时"
                            android:textColor="@color/colorTextBlue"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_4_3_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            tools:text="平均耗时1.5小时"
                            android:textColor="@color/color788FAE"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:text="巡检耗时最长"
                            android:textColor="@color/color2B2B2B"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_4_4_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            tools:text="3小时"
                            android:textColor="@color/colorTextRed"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_4_4_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            tools:text="平均耗时1.5小时"
                            android:textColor="@color/color788FAE"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/color_division" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:text="巡检最早"
                            android:textColor="@color/color2B2B2B"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_4_5_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/colorTextBlue"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_4_5_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            tools:text="9点结束"
                            android:textColor="@color/colorTextBlue"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:text="巡检最晚"
                            android:textColor="@color/color2B2B2B"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_4_6_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            tools:text="17：00开始"
                            android:textColor="@color/colorTextRed"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_4_6_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            tools:text="18：00结束"
                            android:textColor="@color/colorTextRed"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/color_division" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:text="维修台数最多人员"
                            android:textColor="@color/color2B2B2B"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_4_7_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            tools:text="涨安"
                            android:textColor="@color/colorTextBlue"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:text="维修台数最少人员"
                            android:textColor="@color/color2B2B2B"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_4_7_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            tools:text="涨安"
                            android:textColor="@color/colorTextRed"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/color_division" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="7dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:text="最难修复的故障"
                            android:textColor="@color/color2B2B2B"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_4_8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/color2B2B2B"
                            android:textSize="15dp" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/llChooseTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llEmpty"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/transparent_black"
                android:orientation="vertical"
                android:visibility="gone" />
        </LinearLayout>

    </FrameLayout>
</LinearLayout>