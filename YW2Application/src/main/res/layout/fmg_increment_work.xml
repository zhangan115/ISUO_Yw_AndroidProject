<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/white_bg_with_shape"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_increment_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/message_title_tag"
                            android:drawablePadding="4dp"
                            android:lines="1"
                            android:paddingBottom="5dp"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_increment_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text333"
                            android:textSize="14sp"
                            android:visibility="visible"
                            tools:text="已完成" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/color_division" />

                    <TextView
                        android:id="@+id/tv_equip_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/text333"
                        android:textSize="14sp"
                        tools:text="催化" />

                    <TextView
                        android:id="@+id/tv_plan_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/text333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_plan_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/text333"
                        android:textSize="14sp" />


                    <LinearLayout
                        android:id="@+id/ll_play_task_sound"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:lines="1"
                                android:paddingTop="10dp"
                                android:paddingBottom="5dp"
                                android:text="工作内容:"
                                android:textColor="@color/color535862"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_increment_play_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:minLines="2"
                                    android:paddingTop="8dp"
                                    android:paddingRight="10dp"
                                    android:paddingBottom="8dp"
                                    android:text="语音内容文字展示区域"
                                    android:textColor="@color/text333"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/id_increment_time"
                                    android:layout_width="70dp"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/voice_three"
                                    android:gravity="center"
                                    android:textColor="@color/gray_999999"
                                    android:textSize="12sp"
                                    tools:text="60s" />
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <com.isuo.yw2application.widget.ShowImageLayout
                        android:id="@+id/ll_increment_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/white_bg_with_shape"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/message_title_tag"
                            android:drawablePadding="2dp"
                            android:lines="1"
                            android:text="工作结果"
                            android:textColor="@color/text333"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="10dp"
                        android:background="@color/color_division" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:lines="1"
                                android:text="结果描述:"
                                android:textColor="@color/color535862"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_play_work_sound"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical">


                            <EditText
                                android:id="@+id/id_work_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:hint="语音文字显示区域"
                                android:minHeight="44dp"
                                android:textColor="@color/text333"
                                android:textColorHint="@color/gray_999999"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/id_work_sound_time"
                                android:layout_width="70dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/voice_three"
                                android:gravity="center"
                                android:paddingLeft="5dp"
                                android:textColor="@color/gray_999999"
                                android:textSize="12sp"
                                tools:text="60s" />

                            <ImageView
                                android:id="@+id/iv_record"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:src="@drawable/mic_btn" />
                        </LinearLayout>

                    </LinearLayout>

                    <com.isuo.yw2application.widget.TakePhotoView
                        android:id="@+id/take_photo_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_upload"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/bg_btn_report"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>