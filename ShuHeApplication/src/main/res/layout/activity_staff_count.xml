<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llOpenChooseTime"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:src="@drawable/last_page" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color2B2B2B"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/ivTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/drop_down" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="21dp"
                android:src="@drawable/next_page" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/llOpenChooseTime"
            android:orientation="vertical">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:scrollbars="none"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/white_bg_with_shape"
                        android:orientation="vertical"
                        android:paddingLeft="15dp"
                        android:paddingTop="12dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/id_fault_group"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/DP_2"
                                android:background="@drawable/staff_bg_item"
                                android:drawableRight="@drawable/drop_down_arrow"
                                android:drawablePadding="4dp"
                                android:lines="1"
                                android:padding="10dp"
                                android:text="运行一班"
                                android:textColor="@color/text333" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:layout_marginTop="10dp"
                                android:background="@color/color_division" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:visibility="gone">

                                    <TextView
                                        android:id="@+id/id_staff_yesterday"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/staff_bg_gray"
                                        android:gravity="center"
                                        android:padding="@dimen/DP_10"
                                        android:text="昨天"
                                        android:textColor="@color/gray_666666"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/id_staff_today"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/staff_bg_blue"
                                        android:gravity="center"
                                        android:padding="@dimen/DP_10"
                                        android:text="今天"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/countLayout"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <View
                                        android:layout_width="1px"
                                        android:layout_height="match_parent"
                                        android:background="@color/color_division" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:id="@+id/layout_0"
                                        android:gravity="center_horizontal"
                                        android:orientation="vertical"
                                        android:tag="0">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="4dp"
                                            android:text="所有"
                                            android:textColor="@color/text333"
                                            android:textSize="14sp" />

                                        <TextView
                                            android:id="@+id/tv0"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="4dp"
                                            android:text="0"
                                            android:textColor="@color/text333"
                                            android:textSize="14sp" />
                                    </LinearLayout>

                                    <View
                                        android:layout_width="1px"
                                        android:layout_height="match_parent"
                                        android:background="@color/color_division" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:id="@+id/layout_1"
                                        android:gravity="center_horizontal"
                                        android:orientation="vertical"
                                        android:tag="1">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="4dp"
                                            android:text="到岗"
                                            android:textColor="@color/text333"
                                            android:textSize="14sp" />

                                        <TextView
                                            android:id="@+id/tv1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="4dp"
                                            android:text="0"
                                            android:textColor="@color/text333"
                                            android:textSize="14sp" />
                                    </LinearLayout>

                                    <View
                                        android:layout_width="1px"
                                        android:layout_height="match_parent"
                                        android:background="@color/color_division" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:id="@+id/layout_2"
                                        android:gravity="center_horizontal"
                                        android:orientation="vertical"
                                        android:tag="2">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="4dp"
                                            android:text="未到岗"
                                            android:textColor="@color/text333"
                                            android:textSize="14sp" />

                                        <TextView
                                            android:id="@+id/tv2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="4dp"
                                            android:text="0"
                                            android:textColor="@color/text333"
                                            android:textSize="14sp" />

                                    </LinearLayout>

                                    <View
                                        android:layout_width="1px"
                                        android:layout_height="match_parent"
                                        android:background="@color/color_division" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/layout_3"
                                        android:layout_weight="1"
                                        android:gravity="center_horizontal"
                                        android:orientation="vertical"
                                        android:tag="3">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="4dp"
                                            android:text="未开始"
                                            android:textColor="@color/text333"
                                            android:textSize="14sp" />

                                        <TextView
                                            android:id="@+id/tv3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="4dp"
                                            android:text="0"
                                            android:textColor="@color/text333"
                                            android:textSize="14sp" />

                                    </LinearLayout>

                                    <View
                                        android:layout_width="1px"
                                        android:layout_height="match_parent"
                                        android:background="@color/color_division" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:id="@+id/layout_4"
                                        android:gravity="center_horizontal"
                                        android:orientation="vertical"
                                        android:tag="4">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="4dp"
                                            android:text="延时"
                                            android:textColor="@color/text333"
                                            android:textSize="14sp" />

                                        <TextView
                                            android:id="@+id/tv4"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="4dp"
                                            android:text="0"
                                            android:textColor="@color/text333"
                                            android:textSize="14sp" />
                                    </LinearLayout>

                                    <View
                                        android:layout_width="1px"
                                        android:layout_height="match_parent"
                                        android:background="@color/color_division" />
                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:background="@color/color_division" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <com.sito.library.widget.ExpendRecycleView
                                    android:id="@+id/id_staff_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:padding="2dp"
                                    android:scrollbars="none"
                                    android:visibility="gone">

                                </com.sito.library.widget.ExpendRecycleView>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/white_bg_with_shape"
                        android:orientation="vertical"
                        android:paddingLeft="15dp"
                        android:paddingTop="12dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="12dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="本周未到岗统计"
                                android:textColor="@color/text333"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="7"
                                        android:gravity="left">

                                        <com.sito.library.widget.ExpendRecycleView
                                            android:id="@+id/id_staff_rec01"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center_vertical"
                                            android:padding="2dp"
                                            android:scrollbars="none">

                                        </com.sito.library.widget.ExpendRecycleView>
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="8dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="top|center"
                                        android:padding="5dp"
                                        android:text="周一"
                                        android:textColor="@color/color_week" />

                                    <View
                                        android:layout_width="1px"
                                        android:layout_height="match_parent"
                                        android:background="@color/color_division"
                                        android:visibility="gone" />
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1px"
                                    android:background="@color/color_division" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="7"
                                        android:gravity="left">

                                        <com.sito.library.widget.ExpendRecycleView
                                            android:id="@+id/id_staff_rec02"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:padding="2dp"
                                            android:scrollbars="none">

                                        </com.sito.library.widget.ExpendRecycleView>
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="8dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="top|center"
                                        android:padding="5dp"
                                        android:text="周二"
                                        android:textColor="@color/color_week" />

                                    <View
                                        android:layout_width="1px"
                                        android:layout_height="match_parent"
                                        android:background="@color/color_division"
                                        android:visibility="gone" />


                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1px"
                                    android:background="@color/color_division" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="7"
                                        android:gravity="left">

                                        <com.sito.library.widget.ExpendRecycleView
                                            android:id="@+id/id_staff_rec03"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:padding="2dp"
                                            android:scrollbars="none">

                                        </com.sito.library.widget.ExpendRecycleView>
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="8dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="top|center"
                                        android:padding="5dp"
                                        android:text="周三"
                                        android:textColor="@color/color_week" />

                                    <View
                                        android:layout_width="1px"
                                        android:layout_height="match_parent"
                                        android:background="@color/color_division"
                                        android:visibility="gone" />

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1px"
                                    android:background="@color/color_division" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="7"
                                        android:gravity="left">

                                        <com.sito.library.widget.ExpendRecycleView
                                            android:id="@+id/id_staff_rec04"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:padding="2dp"
                                            android:scrollbars="none">

                                        </com.sito.library.widget.ExpendRecycleView>
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="8dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="top|center"
                                        android:padding="5dp"
                                        android:text="周四"
                                        android:textColor="@color/color_week" />

                                    <View
                                        android:layout_width="1px"
                                        android:layout_height="match_parent"
                                        android:background="@color/color_division"
                                        android:visibility="gone" />

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1px"
                                    android:background="@color/color_division" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="7"
                                        android:gravity="left">

                                        <com.sito.library.widget.ExpendRecycleView
                                            android:id="@+id/id_staff_rec05"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:padding="2dp"
                                            android:scrollbars="none">

                                        </com.sito.library.widget.ExpendRecycleView>
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="8dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="top|center"
                                        android:padding="5dp"
                                        android:text="周五"
                                        android:textColor="@color/color_week" />

                                    <View
                                        android:layout_width="1px"
                                        android:layout_height="match_parent"
                                        android:background="@color/color_division"
                                        android:visibility="gone" />


                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1px"
                                    android:background="@color/color_division" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="7"
                                        android:gravity="left">

                                        <com.sito.library.widget.ExpendRecycleView
                                            android:id="@+id/id_staff_rec06"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:padding="2dp"
                                            android:scrollbars="none">

                                        </com.sito.library.widget.ExpendRecycleView>
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="8dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="top|center"
                                        android:padding="5dp"
                                        android:text="周六"
                                        android:textColor="@color/color_week" />

                                    <View
                                        android:layout_width="1px"
                                        android:layout_height="match_parent"
                                        android:background="@color/color_division"
                                        android:visibility="gone" />

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1px"
                                    android:background="@color/color_division" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="7"
                                        android:gravity="left">

                                        <com.sito.library.widget.ExpendRecycleView
                                            android:id="@+id/id_staff_rec07"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:padding="2dp"
                                            android:scrollbars="none">

                                        </com.sito.library.widget.ExpendRecycleView>
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="8dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="top|center"
                                        android:padding="5dp"
                                        android:text="周日"
                                        android:textColor="@color/color_week" />

                                    <View
                                        android:layout_width="1px"
                                        android:layout_height="match_parent"
                                        android:background="@color/color_division"
                                        android:visibility="gone" />

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/white_bg_with_shape"
                        android:orientation="vertical"
                        android:paddingLeft="15dp"
                        android:paddingTop="12dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="12dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/id_staff_leavecount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text333"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                tools:text="本月未到岗统计 6" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">

                                <com.sito.library.widget.ExpendRecycleView
                                    android:id="@+id/id_staff_leave"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scrollbars="none">

                                </com.sito.library.widget.ExpendRecycleView>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/llOpenChooseTime"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/llChooseTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llEmpty"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/transparent_black"
                android:orientation="vertical"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
