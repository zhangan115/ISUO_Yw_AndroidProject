<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/white_bg_with_shape"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/contentTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/joinBtn"
        android:textColor="@color/text333"
        android:textSize="14sp"
        tools:text="xxx申请加入xxx公司" />

    <TextView
        android:id="@+id/joinTimeTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contentTv"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/joinBtn"
        android:textColor="@color/gray_999999"
        android:textSize="12sp"
        tools:text="2020-10-10 08:00" />

    <Button
        android:id="@+id/joinBtn"
        android:layout_width="80dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_btn_report"
        android:text="同意申请"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        android:textStyle="bold" />
</RelativeLayout>