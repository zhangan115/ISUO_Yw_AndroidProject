<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <ImageView
        android:layout_marginLeft="5dp"
        android:id="@+id/icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/icon_recoder" />

    <FrameLayout
        android:layout_marginLeft="5dp"
        android:id="@+id/id_recoder_lenght"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/icon"
        android:background="@drawable/chatto_bg_focusedn">

        <View
            android:id="@+id/id_recoder_anim"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/adjn" />


    </FrameLayout>

    <TextView
        android:id="@+id/id_recoder_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dp"
        android:layout_toRightOf="@id/id_recoder_lenght"
        android:text="20'"
        android:textColor="#ff777777" />
    <TextView
        android:layout_marginTop="50dp"
        android:text="录音内容"
        android:layout_below="@+id/id_recoder_time"
        android:id="@+id/id_recoder_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>